{# templates/song/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Spotify Playlist{% endblock %}

{% block body %}
    <h1>{{ playlist.name }}</h1>
    <p>{{ playlist.description }}</p>
    
    <h2>List of Songs</h2>
    <ul>
        {% for item in playlist.tracks.items %}
            <li>
                {# Display the album image if available #}
                {% if item.track.album.images is not empty %}
                    <img src="{{ item.track.album.images[0].url }}" alt="Album cover" width="100" height="100">
                {% endif %}
                {{ item.track.name }} by 
                {% for artist in item.track.artists %}
                    {{ artist.name }}{% if not loop.last %}, {% endif %}
                {% endfor %}
            </li>
        {% endfor %}
    </ul>
{% endblock %}
