{# templates/track/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Spotify Tracks{% endblock %}

{% block body %}
    

    <h2>Morceaux par d√©faut</h2>
    <ul>
        {% for track in tracks %}
            <li>
                {% if track.album.images is not empty %}
                    <img src="{{ track.album.images[0].url }}" alt="Album cover" width="100" height="100">
                {% endif %}
                {{ track.name }} par 
                {% for artist in track.artists %}
                    {{ artist.name }}{% if not loop.last %}, {% endif %}
                {% endfor %}
            </li>
        {% endfor %}
    </ul>
    
{% endblock %}
